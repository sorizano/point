azul = #22bce0
gris_oscuro = #444
gris_texto = #7a7a7a
naranja = #dd4f24

a
	color naranja

body
	background #e8e8e8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 3


	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 0 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black 


		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 69

			img
				border-radius 50%
				width 50px
				
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right -15px
			text-align right
			top 15px
			width 50%
			z-index -1


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
		




	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		text-align left
		white-space nowrap

		li
			display inline-block
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em

	.post
		background white 
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto

	.acciones
		border-top 3px solid azul
		padding 0.5em

	.descripcion
		color gris_texto

		.imagen
			float left
			margin 0
			padding 0

			img
				height 160px
				vertical-align top
				width 120px


